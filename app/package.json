{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": "^20.14.0"
  },
  "scripts": {
    "db:generate": "prisma generate",
    "db:migrate": "dotenvx run --convention=nextjs -- prisma migrate dev",
    "db:studio": "dotenvx run --convention=nextjs -- prisma studio --browser=none",
    "dev": "concurrently -k -c cyan,gray -n server,email 'pnpm dev:server' 'pnpm db:studio' 'pnpm dev:email'",
    "dev:server": "next dev",
    "dev:email": "email dev --dir src/email/templates --port 3001",
    "build": "pnpm db:generate && next build",
    "format:check": "pnpm prettier --check .",
    "format:write": "pnpm prettier --write .",
    "start": "next start",
    "lint": "eslint . --cache",
    "prepare": "cd .. && husky app/.husky",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@dotenvx/dotenvx": "^1.5.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@lucia-auth/adapter-prisma": "^4.0.1",
    "@prisma/client": "^5.16.1",
    "@react-email/components": "^0.0.21",
    "@tanstack/react-query": "^5.50.1",
    "@trpc/client": "11.0.0-rc.449",
    "@trpc/react-query": "11.0.0-rc.449",
    "@trpc/server": "11.0.0-rc.449",
    "envalid": "^8.0.0",
    "form-data": "^4.0.0",
    "formik": "^2.4.6",
    "framer-motion": "^11.2.13",
    "is-ci": "^3.0.1",
    "lucia": "^3.2.0",
    "mailgun.js": "^10.2.1",
    "next": "14.2.4",
    "nuqs": "^1.17.4",
    "oslo": "^1.2.1",
    "prisma": "^5.16.1",
    "react": "^18",
    "react-dom": "^18",
    "react-email": "^2.1.5",
    "reflect-metadata": "^0.2.2",
    "superjson": "^2.2.1",
    "ts-pattern": "^5.2.0",
    "tsyringe": "^4.8.0",
    "zod": "^3.23.8",
    "zod-formik-adapter": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.6.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "eslint": "^9.6.0",
    "eslint-config-next": "14.2.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^54.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0"
  }
}
